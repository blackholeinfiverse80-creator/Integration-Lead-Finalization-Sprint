# Core Integrator Configuration Template
# Copy this file to .env and configure with your actual values

# Database Configuration
DB_PATH=db/context.db
NONCE_DB_PATH=db/nonce_store.db

# Security Settings (ENABLED for production)
SSPL_ENABLED=true
SSPL_ALLOW_DRIFT_SECONDS=300

# Noopur AI Integration
INTEGRATOR_USE_NOOPUR=true
NOOPUR_BASE_URL=http://localhost:5001
NOOPUR_API_KEY=your_noopur_api_key_here

# MongoDB Configuration (Atlas Cloud)
USE_MONGODB=false
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
MONGODB_DATABASE_NAME=core_integrator

# CreatorCore Integration (Production)
CREATORCORE_BASE_URL=http://localhost:5002
CREATORCORE_API_KEY=your_creatorcore_api_key_here

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=false
LOG_LEVEL=INFO

# Performance Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
CONNECTION_POOL_SIZE=10